{
  "name": "@shakirul/scrollbars",
  "version": "2.0.0",
  "description": "React scrollbars component, based Malte Wessel/react-custom-scrollbars",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib dist",
    "build": "babel src --out-dir lib && copyfiles -u 2 ./src/types/*.d.ts ./lib",
    "build:umd": "cross-env NODE_ENV=development webpack --config webpack.config.js",
    "build:umd:min": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "lint": "eslint src test examples",
    "test": "cross-env NODE_ENV=test karma start",
    "test:watch": "cross-env NODE_ENV=test karma start --auto-watch --no-single-run",
    "test:cov": "cross-env NODE_ENV=test COVERAGE=true karma start --single-run",
    "prepublish_deprecated": "npm run lint && npm run test && npm run clean && npm run build && npm run build:umd && npm run build:umd:min && node ./prepublish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KhanShaheb34/scrollbars.git"
  },
  "keywords": [
    "scroll",
    "scroller",
    "scrollbars",
    "react-component",
    "react",
    "custom"
  ],
  "author": "Shakirul Hasan Khan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KhanShaheb34/scrollbars/issues"
  },
  "homepage": "https://github.com/KhanShaheb34/scrollbars#readme",
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/register": "^7.23.0",
    "babel-loader": "^9.1.3",
    "copyfiles": "^2.4.1",
    "cross-env": "^3.1.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "expect": "^1.6.0",
    "glob": "^10.3.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "^2.2.0",
    "karma-mocha": "^2.0.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-webpack": "^5.0.0",
    "mocha": "^10.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
    "simulant": "^0.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "dom-css": "^2.0.0",
    "prop-types": "^15.5.10",
    "raf": "^3.1.0"
  }
}
